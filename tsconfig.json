{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2016",
      "lib": [
        "esnext", "dom"
      ],
      /* Modules */
      "module": "commonjs",
      "rootDir": "src",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      /* Type Checking */
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }